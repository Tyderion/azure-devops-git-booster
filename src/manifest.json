{
  "name": "Azure DevOps Git Booster",
  "description": "Optimizations for the Azure DevOps Git UI",
  "homepage_url": "https://github.com/jantimon/azure-chrome-extension",
  "version": "1.0.3",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "run_at" : "document_start",
      "js": ["before.js"],
      "matches": [
        "https://dev.azure.com/*"
      ]
    },
    {
      "run_at" : "document_idle",
      "js": ["after.js"],
      "matches": [
        "https://dev.azure.com/*"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
